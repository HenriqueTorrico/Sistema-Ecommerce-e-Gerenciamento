@model EcommerceMusical.Web.Models.modelLogin

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,300;0,400;0,500;0,600;0,700;0,800;1,300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="form-login">
        <div class="header-login">
            <div class="container">
                <div class="header-actions-login">
                    <a href="~/Home/Index"><img src="~/Imagens/setaVoltar.svg" alt=""></a>
                    <h5 class="logo-login">High Key Music</h5>
                </div>
                <h1 class="text-header-login">Faça seu login agora mesmo!</h1>
            </div>
        </div>

        <div class="container">
            <div class="card-forms-login col-lg-6 col-md-8 col-sm-12">
                
                <div class="form-login">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        <div class="input-login wi-100 mt-4">
                            <label for="">E-mail</label>
                            @Html.EditorFor(m => m.eml_usuario, new { htmlAttributes = new { id = "txtUsuario", senha = "txtUsuario", type = "text", @class = "input", required = "required", maxlength = "30" } })
                            <div class="linha"></div>
                        </div>
                        <div class="input-login wi-100">
                            <label for="">Senha</label>
                            @Html.EditorFor(m => m.sh_usuario, new { htmlAttributes = new { id = "txtSenha", senha = "txtSenha", type = "password", @class = "input", required = "required", maxlength = "20" } })
                            <div class="linha"></div>
                        </div>

                        <div class="btn-entrar-login">
                            <button type="submit">Entrar</button>
                        </div>

                        <p class="text-login">Ou</p>

                        <div class="btn-redeSocial-login btn-google">
                            <button type="submit">Entrar com o <span>Google</span></button>
                        </div>
                        <div class="btn-redeSocial-login btn-facebook">
                            <button type="submit">Entrar com o <span>facebook</span></button>
                        </div>

                        <div class="btn-cadastro-login">
                            <p>Não possuí cadastro ainda? <a href="~/Login/cadastroUsuario">Clique aqui</a></p>
                        </div>
                    }
                    </div>               
                </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>