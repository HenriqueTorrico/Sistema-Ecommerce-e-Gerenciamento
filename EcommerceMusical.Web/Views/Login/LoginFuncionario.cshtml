@model EcommerceMusical.Web.Models.modelLogin

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Login.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="forms">
        <div class="btn-voltar">
            <a href="~/Home/Index">
                <svg width="41" height="16" viewBox="0 0 41 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0.292893 7.29289C-0.097631 7.68341 -0.0976311 8.31658 0.292893 8.7071L6.65685 15.0711C7.04738 15.4616 7.68054 15.4616 8.07107 15.0711C8.46159 14.6805 8.46159 14.0474 8.07107 13.6569L2.41421 8L8.07107 2.34314C8.46159 1.95262 8.46159 1.31945 8.07107 0.928929C7.68054 0.538405 7.04738 0.538405 6.65685 0.928929L0.292893 7.29289ZM41 7L1 7L1 9L41 9L41 7Z" fill="#E3E3E3" />
                </svg>
            </a>
        </div>
        <div class="box-login">
            <div class="form">
                <h2>Bem-vindo</h2>
                @using (Html.BeginForm("LoginFuncionario", "Login", FormMethod.Post))
                {
                    <div class="inputs">
                        <div class="input-email">
                            @Html.EditorFor(m => m.eml_funcionario, new { htmlAttributes = new { id = "txtUsuario", senha = "txtUsuario", type = "text", @class = "input", required = "required", maxlength = "30" } })
                            <div class="linha"></div>
                            <label for="">E-mail</label>
                        </div>

                        <div class="input-senha">
                            @Html.EditorFor(m => m.sh_funcionario, new { htmlAttributes = new { id = "txtSenha", senha = "txtSenha", type = "password", @class = "input", required = "required", maxlength = "20" } })
                            <div class="linha"></div>
                            <label for="">Senha</label>
                        </div>
                    </div>

                    <div class="buttons">
                        <button class="btn-entrar" type="submit">Entrar</button>
                    </div>
                }
            </div>

        </div>
        <div class="box-btn-cadastro">
            <div class="info">
                <h2>Seja bem vindo de volta</h2>
                <p></p>
            </div>
        </div>
    </div>
</body>
</html>
