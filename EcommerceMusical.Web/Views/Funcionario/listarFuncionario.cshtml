@model IEnumerable<EcommerceMusical.Web.Models.modelFuncionario>
@{
    ViewBag.Title = "Lista de Funcionários";
    Layout = "~/Views/Shared/_LayoutPainel_de_Controle.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/consulta-funcionario.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="consult-func">
        <div class="bg-red">
            <h1>Consulta de Funcionários</h1>
        </div>
        <div class="container">
            <div class="card-table">
                <table class="table" style="width: 100%;">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.cd_funcionario)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.img_funcionario)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.nm_funcionario)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.cel_funcionario)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.eml_funcionario)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.cpf_funcionario)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.cep_funcionario)</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@Html.DisplayFor(modelItem => item.cd_funcionario)</th>
                                <td class="imgFunc">
                                    <div class="image-func">
                                        <img src="@item.img_funcionario" alt="">
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.nm_funcionario)</td>
                                <td>@Html.DisplayFor(modelItem => item.cel_funcionario)</td>
                                <td>@Html.DisplayFor(modelItem => item.eml_funcionario)</td>
                                <td>@Html.DisplayFor(modelItem => item.cpf_funcionario)</td>
                                <td>@Html.DisplayFor(modelItem => item.cep_funcionario)</td>
                                @if (Session["tipoGerente"] != null)
                                {
                                    <td class="actions-buttons">
                                        <div class="btn-excluir">
                                            <a onclick="return confirm('Deseja realmente excluir esse Funcionário?!');" href="~/Funcionario/excluirFuncionario/@item.cd_funcionario"><i class='bx bx-trash'></i></a>
                                        </div>
                                        <div class="btn-updade">
                                            <a href="~/Funcionario/atualizarFuncionario/@item.cd_funcionario"><i class='bx bxs-edit'></i></a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>